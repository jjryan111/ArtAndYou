        <input type="checkbox" onclick="" name="image4" id="" value=res[14] />
        <img src="nothing.jpg" id="4" name="image" alt="" height="200" />

        <input type="checkbox" onclick="" name="image5" id="" value=res[18] />
        <img src="nothing.jpg" id="5" name="image" alt="" height="200" />

        <input type="checkbox" onclick="" name="image6" id="" value=res[22] />
        <img src="nothing.jpg" id="6" name="image" alt="" height="200" />

        <button type="submit" value="Submit">Submit</button>
        <button type="submit" value="Reload">Reload</button>
        <button type="button" onclick="document.getElementById('').Checked = false;window.location.reload();reset">Reset</button>
    </form>

    <script>
            var str = "@ViewBag.ObjectID";
            var res = str.split(",");
            var i = 0;

            document.getElementById("totalrecords").innerHTML = res[0];

            for (i = 1; i < 7; i++)
            {
                document.getElementById(i).src = res[i*4]; //indices 4, 8, 12, etc hold urls
            }
    </script>
</body>
</html>