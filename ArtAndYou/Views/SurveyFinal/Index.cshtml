@model IEnumerable<ArtAndYou.Models.Survey1>

@{
    ViewBag.Title = "Survey Page 1";
}

<h2>Welcome to the survey!</h2>

<form name="Medium" id="Choice1" onsubmit="return validateForm()" action="@Url.Action("Show4Survey1", "SurveyFinal")" method="post">

    <table class="table">
        <tr>
            @foreach (var item in Model)
            {
                <td>
                    <input type="radio" name="Medium" value="@item.Medium">
                    <img src="@Url.Content(item.ImageUrl)" height="200" />
                </td>
             }
        </tr>
    </table>
    <input type="submit" id="ClassSubmit" value="Submit">
</form>

